{
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
      "hashicorp.terraform"
	],
	"vscode": {
		"extensions": [
			"CircleCI.circleci",
			"ms-azuretools.vscode-docker",
			"eamodio.gitlens",
			"hashicorp.terraform",
			"ms-vscode.vscode-typescript-next",
			"esbenp.prettier-vscode"
		]
	}
  },
  "runArgs": [
    "--privileged"
  ]
}